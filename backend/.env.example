# Environment Configuration for NewsHub Backend

# Application
NODE_ENV=development
PORT=3000

# Database
NEWSHUB_DATABASE_PATH=newshub.sqlite

# JWT Configuration
NEWSHUB_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
NEWSHUB_JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
NEWSHUB_FRONTEND_URL=http://localhost:5173

# RSS Parser Configuration
NEWSHUB_RSS_INTERVAL_MINUTES=30
NEWSHUB_MAX_ARTICLES_PER_FEED=100

# Email Configuration (for future notifications)
NEWSHUB_SMTP_HOST=
NEWSHUB_SMTP_PORT=587
NEWSHUB_SMTP_USER=
NEWSHUB_SMTP_PASS=

# Rate Limiting
NEWSHUB_RATE_LIMIT_TTL=60000
NEWSHUB_RATE_LIMIT_MAX=100

# Upload Configuration
NEWSHUB_MAX_FILE_SIZE=5242880
NEWSHUB_UPLOAD_DIR=uploads
